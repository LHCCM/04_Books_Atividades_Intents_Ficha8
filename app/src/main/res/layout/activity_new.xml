<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="amsi.dei.estg.ipleiria.pt.ficha4_amsi.NewActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BEM-VINDO"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="mail"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="72dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonEst"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:onClick="onClickEstatico"
                android:text="VER DETALHES DO LIVRO (Estático)" />

            <Button
                android:id="@+id/buttonDin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:onClick="onClickDinamico"
                android:text="VER DETALHES DO LIVRO (Dinâmico)" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:onClick="onClickListaLivros"
                android:text="Lista Livros" />

            <Button
                android:id="@+id/btnGrelha"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:onClick="onClickGrelhaLivros"
                android:text="grelha livros" />

            <Button
                android:id="@+id/buttonEmail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:onClick="onClickEnviar"
                android:text="enviar e-mail" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
