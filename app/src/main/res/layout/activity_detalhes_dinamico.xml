<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amsi.dei.estg.ipleiria.pt.ficha4_amsi.DetalhesDinamico">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:context="amsi.dei.estg.ipleiria.pt.ficha4_amsi.DetalhesEstatico">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="126dp"
            android:layout_height="144dp"
            app:srcCompat="@android:color/background_light" />

        <LinearLayout
            android:layout_width="54dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:weightSum="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.53" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="TÃ­tulo:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSerie"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Serie:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAutor"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Autor:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAno2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Ano:"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/textViewT"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textViewS"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textViewAu"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textViewAno"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
